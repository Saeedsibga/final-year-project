<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/acne_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acne Medicines" />

        <LinearLayout
            android:id="@+id/acne_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 5" />

        </LinearLayout>

        <Button
            android:id="@+id/eczema_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eczema Medicines"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/eczema_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 5" />

        </LinearLayout>

        <Button
            android:id="@+id/ringworm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ringworm Medicines"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ringworm_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 1" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 3" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Condition 5" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>